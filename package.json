{
  "name": "@oddle/chat-wrapper-ui",
  "version": "1.0.8",
  "description": "Reusable chat UI wrapper for company projects",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "showcase": "cd showcase && npm run dev",
    "showcase:install": "cd showcase && npm install",
    "showcase:build": "cd showcase && npm run build"
  },
  "keywords": [
    "chat",
    "ui",
    "react",
    "wrapper"
  ],
  "author": "Oddle Engineering",
  "license": "MIT",
  "peerDependencies": {
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "react-markdown": "^10.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-company/chat-wrapper-ui.git"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  }
}
